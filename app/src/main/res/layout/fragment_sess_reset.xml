<ScrollView android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFF6F3"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:background="#FFF6F3"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/calibri"
            android:text="@string/sess_use_h1"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </TextView>

        <TextView
            android:id="@+id/textview2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/calibri"
            android:text="@string/sess_use_h2"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview1">

        </TextView>

        <TextView
            android:id="@+id/textview3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/calibri"
            android:text="@string/univ_na"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview2">

        </TextView>

        <TextView
            android:id="@+id/textview4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/calibri"
            android:text="@string/univ_na"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview3">

        </TextView>

        <TextView
            android:id="@+id/textview5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/calibri"
            android:text="@string/univ_na"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview4">

        </TextView>

        <TextView
            android:id="@+id/textview6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/calibri"
            android:text="@string/sess_use_h3"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview5">

        </TextView>


        <Button
            android:id="@+id/yesbut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sess_use_b1"
            android:textColor="@android:color/white"
            android:minHeight="0dp"
            android:minWidth="70dp"
            android:padding="10dp"
            android:background="@drawable/buttons"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textview6"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/nobut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sess_use_b2"
            android:textColor="@android:color/white"
            android:minHeight="0dp"
            android:minWidth="70dp"
            android:padding="10dp"
            android:background="@drawable/buttons"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textview6"
            app:layout_constraintStart_toEndOf="@id/yesbut" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>